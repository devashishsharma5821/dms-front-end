{
    "Compute_id": {
        "type": "heading",
        "value": "Compute Id: e002fg"
    },
    "compute_name": {
        "type": "text",
        "label": "Compute Name",
        "required": true,
        "show": true,
        "isDefaultValue": true,
        "defaultValue": "My Compute 1",
        "errormessage": "Compute Name is required",
        "className": "computeName",
        "uiSchema": {
            "grid-column": "auto / span 8"
        }
    },
    "worker_type_id": {
        "type": "select",
        "label": "Worker Type",
        "className": "workerType",
        "required": true,
        "isDefaultValue": true,
        "defaultValue": "Standard_DS3_v2 56GB | 16Cores",
        "errormessage": "Select Worker Type Id",
        "child": "child",
        "options": [],
        "uiSchema": {
            "grid-column": "auto / span 4"
        }
    },
    "driver_type_id": {
        "type": "select",
        "label": "Driver Type",
        "className": "DriverType",
        "required": true,
        "isDefaultValue": true,
        "defaultValue": "Standard_DS3_v2 56GB | 16Cores",
        "errormessage": "Select Driver Type Id",
        "child": "child",
        "options": [],
        "uiSchema": {
            "grid-column": "auto / span 4"
        }
    },
    "workers": {
        "type": "number",
        "label": "Workers",
        "required": false,
        "show": true,
        "isDefaultValue": true,
        "defaultValue": 8,
        "conditionalRender": true,
        "child": "child",
        "errormessage": "Workers is required",
        "className": "Workers",
        "min": "0",
        "uiSchema": {
            "grid-column": "auto / span 4"
        }
    },
    "min_workers": {
        "type": "number",
        "label": "Min Workers",
        "show": false,
        "required": false,
        "conditionalRender": true,
        "isDefaultValue": true,
        "defaultValue": 1,
        "errormessage": "min workers is required",
        "className": "minWorkers",
        "min": "0",
        "uiSchema": {
            "grid-column": "auto / span 2"
        },
        "lessThan": true,
        "ref": "max_workers",
        "msg": "Max must be greater than Min"
    },
    "max_workers": {
        "type": "number",
        "label": "Max Workers",
        "show": false,
        "required": false,
        "conditionalRender": true,
        "isDefaultValue": true,
        "defaultValue": 8,
        "errormessage": "max workers is required",
        "className": "maxWorkers",
        "min": "0",
        "uiSchema": {
            "grid-column": "auto / span 2"
        },
        "moreThan": true,
        "ref": "min_workers",
        "msg": "Min must be less than Max"
    },
    "spot_instances": {
        "type": "switch",
        "label": "Spot Instances",
        "className": "spotInstances",
        "uiSchema": {
            "grid-column": "auto / span 8",
            "display": "flex",
            "justify-content": "flex-end",
            "flex-direction": "row-reverse"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            }
        },
        "checked": "isChecked"
    },
    "enable_autoscaling": {
        "type": "switch",
        "label": "Enable autoscalings",
        "className": "enableAutoscaling",
        "uiSchema": {
            "grid-column": "auto / span 8",
            "display": "flex",
            "justify-content": "flex-end",
            "flex-direction": "row-reverse"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            }
        }
    },
    "terminate_after": {
        "type": "switch",
        "label": "Terminate after",
        "className": "terminateAfter",
        "isDefaultValue": true,
        "defaultValue": true,
        "uiSchema": {
            "grid-column": "auto / span 2",
            "display": "flex",
            "justify-content": "flex-end",
            "flex-direction": "row-reverse"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            }
        }
    },
    "max_inactivity_min": {
        "type": "number",
        "label": "minutes of inactivity",
        "show": true,
        "disable": true,
        "conditionalRender": true,
        "isDefaultValue": true,
        "defaultValue": 2,
        "errormessage": "minutes of inactivity",
        "className": "minutesOfInactivity",
        "min": "0",
        "uiSchema": {
            "grid-column": "auto / span 6",
            "display": "flex",
            "justify-content": "flex-end",
            "flex-direction": "row-reverse"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            }
        }
    }
}
