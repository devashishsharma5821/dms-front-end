{
    "default": {
        "isDefault": true,
        "default_heading_value": "Compute ID:",
        "value": ""
    },
    "compute_name": {
        "type": "text",
        "label": "Compute Name",
        "required": true,
        "show": true,
        "isDefaultValue": true,
        "defaultValue": "My Compute 1",
        "errormessage": "Compute Name is required",
        "className": "computeName",
        "uiSchema": {
            "grid-column": "auto / span 8"
        }
    },
    "worker_type_id": {
        "type": "select",
        "label": "Worker Type",
        "className": "workerType",
        "required": true,
        "isDefaultValue": true,
        "defaultValue": "Select Worker Type",
        "errormessage": "Worker Type is Required",
        "child": "child",
        "options": [],
        "uiSchema": {
            "grid-column": "auto / span 4"
        }
    },
    "driver_type_id": {
        "type": "select",
        "label": "Driver Type",
        "className": "DriverType",
        "required": true,
        "isDefaultValue": true,
        "defaultValue": "Select Driver Type",
        "errormessage": "Driver Type is required",
        "child": "child",
        "options": [],
        "uiSchema": {
            "grid-column": "auto / span 4"
        }
    },
    "workers": {
        "type": "number",
        "label": "Workers",
        "required": false,
        "show": true,
        "isDefaultValue": true,
        "defaultValue": 8,
        "conditionalRender": true,
        "child": "child",
        "errormessage": "Workers is required",
        "className": "Workers",
        "min": "0",
        "uiSchema": {
            "grid-column": "auto / span 4"
        }
    },
    "min_workers": {
        "type": "number",
        "label": "Min Workers",
        "show": false,
        "required": false,
        "conditionalRender": true,
        "isDefaultValue": true,
        "defaultValue": 1,
        "errormessage": "min workers is required",
        "className": "minWorkers",
        "min": "0",
        "uiSchema": {
            "grid-column": "auto / span 2"
        },
        "lessThan": true,
        "ref": "max_workers",
        "msg": "min workers must be less than max workers"
    },
    "max_workers": {
        "type": "number",
        "label": "Max Workers",
        "show": false,
        "required": false,
        "conditionalRender": true,
        "isDefaultValue": true,
        "defaultValue": 8,
        "errormessage": "max workers is required",
        "className": "maxWorkers",
        "min": "0",
        "uiSchema": {
            "grid-column": "auto / span 2"
        },
        "moreThan": true,
        "ref": "min_workers",
        "msg": "max workers must be greater than min workers"
    },
    "spot_instances": {
        "type": "switch",
        "label": "Spot Instances",
        "className": "spotInstances",
        "uiSchema": {
            "grid-column": "auto / span 8",
            "display": "flex",
            "justify-content": "flex-end",
            "flex-direction": "row-reverse"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            }
        },
        "checked": "isChecked"
    },
    "enable_autoscaling": {
        "type": "switch",
        "label": "Enable autoscalings",
        "className": "enableAutoscaling",
        "uiSchema": {
            "grid-column": "auto / span 8",
            "display": "flex",
            "justify-content": "flex-end",
            "flex-direction": "row-reverse"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            }
        }
    },
    "terminate_after": {
        "type": "switch",
        "label": "Terminate after",
        "className": "terminateAfter",
        "isDefaultValue": true,
        "defaultValue": true,
        "uiSchema": {
            "grid-column": "auto / span 3",
            "display": "flex",
            "justify-content": "flex-end",
            "flex-direction": "row-reverse"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            }
        }
    },
    "max_inactivity_min": {
        "type": "number",
        "label": "minutes of inactivity",
        "show": true,
        "disable": true,
        "conditionalRender": true,
        "required": false,
        "isDefaultValue": true,
        "errormessage": "minutes of inactivity is required",
        "defaultValue": 60,
        "className": "minutesOfInactivity",
        "msg": "minutes of inactivity must be greater than or equal to 1",
        "wrapper": {
            "elements": {
                "label": true,
                "number": true
            },
            "uiSchema": {
                "grid-column": "auto / span 5",
                "display": "flex",
                "justify-content": "flex-end",
                "flex-direction": "row-reverse"
            }
        },
        "min": "1",
        "extraStyles": {
            "inputWidth": "50px"
        },
        "uiSchema": {
            "grid-column": "auto / span 5",
            "display": "flex",
            "justify-content": "center",
            "flex-direction": "column"
        },
        "uiSchemaOptions": {
            "label": {
                "margin-left": "7px"
            },
            "input": {
                "padding": "8px"
            }
        }
    }
}
